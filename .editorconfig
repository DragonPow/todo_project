# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.go]
indent_style = space
indent_size = 4
max_line_length = 120

# Match Makefiles
[Makefile]
indent_style = tab

# JSON files should use 2 spaces
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# YAML files
[*.yaml]
[*.yml]
indent_style = space
indent_size = 2